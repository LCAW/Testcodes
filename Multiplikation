float multipliziere(float eins, float zwei){
        float Summe;
        Summe=eins*zwei;
        return(Summe);}
        
        
void ausgabeErgebnis (float Summe){
        printf("\n\nDas Ergebnis ist %f",Summe);}
        
int main()
{
    int Zahl1,Zahl2,Summe;
    float eins=eingabeZahl ();
    float zwei=eingabeZahl ();
    float drei=multipliziere (eins, zwei);
    void  =ausgabeErgebnis(Summe);
